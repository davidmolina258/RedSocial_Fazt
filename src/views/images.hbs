<div class="card">
  <div class="card-header d-flex justify-content-between align-item-center">
    <h2>{{image.tittle}}</h2>
    <button class="btn btn-danger" data-id=" {{image.uniqueId}}"><i
        class="fa fa-times"
      ></i>Delete</button>
  </div>
  <div class="card-body">
    <p>{{image.description}}</p>
    <div class="text-center">
      <img
        src="/src/public/upload/0uhgfex..jpeg"
        alt="Aqui hay una imagen"
        class="img-fluid"
      />
    </div>
  </div>
  <div class="card-footer d-flex justify-content-between align-items-center">
    <button
      class="btn btn-success"
      id="btn-like"
      data-id="{{image.filename}}"
    ><i class="fas fa-thumbs-up">Like</i></button>
    <p><i class="fas fa-heart "></i><spanclass="likes-count">{{image.likes}}</span> </p>
    <p><i class="fas fa-eye "></i>{{image.views}} </p>
    <p><i class="fas fa-clock "></i>{{timeago image.timestamp}} </p>

  </div>

  <div class=" card mt-2 ">
    <div class="card-header d-flex justify-content-between align-item-center">
      <h3>Comment</h3>
      <button class="btn btn-info" id="btn-toggle-comment"><i class="fa fa-comment-o"></i>Post a comment</button>
    </div>
    <div class="card-body">
      <blockquote>
        <form action="/images/{{image.uniqueId}}/comment" method="POST">
        <div class="form-gruop">
          <input type="text" name="name" class="form-control" placeholder="Name">
        </div>
        <div class="form-group">
          <input type="email" class="form-control" name="email" placeholder="email">
        </div>
        <div class="form-group">
          <textarea name="comment" class="form-control" placeholder="Your Comment" rows="2"></textarea>
        </div>
        <div class="form-gruop">
          <button class="btn btn-success" id="btn-comment"><i class="fa fa-comment"></i>Comment</button>
        </div>
      </form>
      </blockquote>
    </div>
  </div>
</div>