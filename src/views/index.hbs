<div class="card">
  <div class="card-header bg-dark">
    <h3 class="card-tittle text-white"><i class="far fa-image"></i>Upload a
      image</h3>
  </div>
  <div class="card-body">
    <form
      action="/images"
      class="form"
      method="POST"
      enctype="multipart/form-data"
    >
      <div class="form-group">
        <div class="input-group">
          <div class="custom-file">
            <input
              type="file"
              name="img"
              class="form-control"
              id="inputGruop"
              aria-describedby="inputGruopFileAddon"
              required
            />
            <label for="inputGruop" class="form-label">Choose File</label>
          </div>
        </div>
      </div>
      <div class="form-group">
        <input
          type="text"
          name="tittle"
          class="form-control"
          placeholder="Tittle of the image"
          required
        />
      </div>
      <div class="form-group">
        <textarea
          name="description"
          rows="2"
          class="form-control"
          placeholder="Add a description"
          required
        ></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-success"><i class="fa fa-upload"></i>
          Upload Image</button>
      </div>
    </form>
  </div>
</div>
<div class="card mt-4">
  <div class="card-header bg-dark text-white">
    <h3><i class="far fa-images"></i>Recent Uploads</h3>
  </div>
  
  <div class="card-body">
    <div class="row">    
        {{#each imagenes}}
        <div class="col-md-4">
          <p>{{filename}}</p>
          <a href="/images/{{uniqueId}}"><img src="upload/085yr04..jpeg" alt="{{filename}}" class="w-100 h-100 img-thumbnail"></a>
          <img src="" alt="">
        </div>
        {{/each}}

      </div>
    </div>
  </div>
  <p>{{imagenes}}</p>
  <img
            src="img/imgshare-logo.png"
            alt="imgShare"
          />
  
</div>